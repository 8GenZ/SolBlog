@model Author
@inject IImageService _ImageService
@{
    Layout = "/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Sign up to be an author!";
}
<div class="container-fluid border-1 home-cover">
    <h3 class="back-button text-light">
        <a asp-action="Index" asp-asp-controller="BlogPosts" class="btn btn-lg login-buttons">
            Back
        </a>
    </h3>
    <div class="row">
        <div class="col-md-6 px-3 py-3 transparent-white-background mb-3 border-1 border-rounded">
            <h1 class="text-center">Profile Picture</h1>
            <section>
                <form asp-action="AuthorApply" asp-controller="Home" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <img id="userImage" class="img-fluid img-thumbnail rounded mb-3" src="@_ImageService.ConvertByteArrayToFile(Model?.ImageData!,Model?.ImageType,DefaultImages.UserImage)" />
                        <input type="file" asp-for="ImageFile" class="form-control" accept=".png,.jpg,.jpeg,.gif,.tif"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('userImage').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 px-3 py-3 transparent-white-background mb-3 border-1 border-rounded">
            <h1 class="text-center ">@ViewData["Title"]</h1>
            <section>
                <form asp-action="AuthorApply" asp-controller="Home" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Name" class="form-label">Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <textarea rows="3" asp-for="Subjects" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"></textarea>
                        <label asp-for="Subjects" class="control-label text-black">Subject of expertise</label>
                        <span asp-validation-for="Subjects" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Email" />
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg login-buttons">Submit Application</button>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>