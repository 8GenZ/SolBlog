@model IEnumerable<SolBlog.Models.Category>
@using SolBlog.Enums;
@using SolBlog.Services.Interfaces;
@inject IImageService _ImageService;
@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="Row">
        <a class="btn btn-large btn-outline-primary" asp-action="Create" asp-controller="Categories">Create New</a>

        @foreach (Category category in Model)
        {
            <div class="content-block post-list-view mt--30">
                <div class="post-thumbnail">
                    <a asp-action="Index" asp-controller="BlogPosts" asp-route-categoryId="@category?.Id">
                        <img src="@_ImageService.ConvertByteArrayToFile(category?.ImageData!, category?.ImageType,DefaultImages.CategoryImage)" alt="Post Images">
                    </a>
                </div>
                <div class="post-content">
                    <h4 class="title">
                        <a asp-action="Index" asp-controller="BlogPosts" asp-route-categoryId="@category?.Id">
                            @category?.Name
                        </a>
                    </h4>
                    <div class="post-meta-wrapper">
                        <div class="post-meta">
                            <div class="content">
                                <ul class="post-meta-list">
                                    <li>@category?.Description)</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>

</div>
