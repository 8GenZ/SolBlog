@using SolBlog.Enums;
@using SolBlog.Services.Interfaces;
@inject IImageService _ImageService

<div class="axil-author-area axil-author-banner bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-author">
                    <div class="media">
                        <div class="thumbnail">
                            <a alt="Author Image">
                                <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImages.AuthorImage)" alt="Author Images">
                            </a>
                        </div>
                        <div class="media-body 30px">
                            <div class="author-info">
                                <h1 class="title">Jonathan Chavez</h1>
                                <span class="b3 subtitle">Full Stack Software Developer</span>
                            </div>
                            <div class="content">
                                <p class="b1 description"></p>
                                <ul class="social-share-transparent size-md">
                                @*    <li><a href="#"><i class="far fa-envelope"></i></a></li>*@
                                    <li><a href="https://sol-dev-portfolio.netlify.app"><i class="fas fa-link"></i></a></li>
                                    <li><a href=" https://www.linkedin.com/in/jonathan-gomez-chavez-0763811b2/"><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>