@using SolBlog.Enums;
@using SolBlog.Services.Interfaces;
@inject IImageService _ImageService

<div class="axil-author-area axil-author-banner bg-color-grey">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="about-author">
                    <div class="media">
                        <div class="thumbnail">
                            <a alt="Author Image">
                                <img src="@_ImageService.ConvertByteArrayToFile(null, null, DefaultImages.AuthorImage)" alt="Author Images">
                            </a>
                        </div>
                        <div class="media-body 30px">
                            <div class="author-info">
                                <h1 class="title">Jonathan Chavez</h1>
                                <span class="b3 subtitle">Sr. UX Designer</span>
                            </div>
                            <div class="content">
                                <p class="b1 description">At 40+ years old, my favorite compliment is being told that I look like my mom. Seeing myself in her image, like this daughter up top, makes me so proud of how far I’ve come, and so thankful for where I come from</p>
                                <ul class="social-share-transparent size-md">
                                    <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                                    <li><a href="#"><i class="fab fa-instagram"></i></a></li>
                                    <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                                    <li><a href="#"><i class="far fa-envelope"></i></a></li>
                                    <li><a href="#"><i class="fab fa-linkedin-in"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>